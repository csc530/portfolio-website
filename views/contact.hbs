<p class="" lead>Feel free to send me an email about my ptoject, job inquiries, requests, etc.</p>
<form action="/contact" method="post">
    <fieldset>
        <legend>From: </legend>
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">First Name</span>
            <input type="text" placeholder="{{placeholder.fName}}" autocomplete="given-name" name="firstName"
                aria-autocomplete="inline" id="fName" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default1">Last Name</span>
            <input type="text" placeholder="{{placeholder.lName}}" aria-autocomplete="inline" autocomplete="family-name"
                name="lastName" id="lName" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default1">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default2">Email address</span>
            <input required type="email" placeholder="{{placeholder.email}}" autocomplete="email" aria-autocomplete="list"
                name="email" id="email" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default2">
        </div>

    </fieldset>
    <fieldset>
        <legend>Message details: </legend>
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default3">Subject</span>
            <input type="text" name="subject" spellcheck="true" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default3">
        </div>

        <div class="form-floating">
            <textarea name="msg" placeholder="{{placeholder.msg}}" required wrap="soft" spellcheck="true"
                class="form-control" id="floatingTextarea"></textarea>
            <label for="floatingTextarea">Message</label>
        </div>
    </fieldset>
    <input type="submit" value="Send" class="btn btn-primary" name="submit" />
</form>